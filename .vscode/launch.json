{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha All",
        "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
        "args": [
            "--timeout",
            "999999",
            "${workspaceFolder}/tests/**/*.ts",
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "protocol": "inspector"
    },
    ]
  }